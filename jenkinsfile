pipeline{
  agent {
    docker {
      image 'maven:3.6.3-jdk-11'
      args '-v /root/.m2:/root/.m2'
    }
  }
  stages {
    stage('Maven-Clean'){
      steps{
        sh 'mvn clean'
      }
    }
    stage('Maven-Compile'){
      steps{
        sh 'mvn compile'
      }
    }
    stage('Maven-Test'){
      steps{
        sh 'mvn test'
      }
    }
    stage('Maven-Package'){
        steps{
        sh 'mvn package'
        }
    }
    
    stage("build & SonarQube analysis") {
        agent any
            steps {
              withSonarQubeEnv('sonar-server') {
                sh 'java -version'
                sh 'mvn clean package sonar:sonar'
            }
        }
    }
    

  }
  post{
      success{
          rtUpload (
            serverId: 'ARTIFACTORY-SERVER',
            spec: '''{
                 "files": [
                             {
                                "pattern": "target/*.jar",
                                "target": "art-doc-dev-loc/java-web/"
                            }
                        ]
            }''',
 
            buildName: 'sample maven',
            buildNumber: '1'
            )
      }
  }
}